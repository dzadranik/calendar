doctype html
html(lang="en")
    head
        title iDex
        link(rel='stylesheet' href='css/reset.css')
        link(rel='stylesheet' href='css/style.css')
    block variables
        -
            let month = ['Фамилия, Имя','дней', 'Янв', 'Фев', 'Мар', 'Апр', 'Май', 'Июн', 'Июл', 'Авг', 'Сент', 'Окт', 'Ноя', 'Дек']
            let i=0
    body
        .github-link
            a(href="https://github.com/dzadranik/i-dex") https://github.com/dzadranik/i-dex
        main.wrapper
            h1 Рабочий стол руководителя
            .dashboard
                button.dashboard__button.active Dashboard
                button.dashboard__button Team line up

            .vacation__header
                h2.vacation__header-title График отпусков
                div
                    button.vacation__header-button <
                    span.vacation__header-year 2019
                    button.vacation__header-button >
            table.vacation__table
                thead.vacation__table-header
                    tr
                        each el in month
                            td= el
                tbody.vacation__table-body
                    tr 
                        td
                            img.vacation__employee-photo(src="https://www.placecage.com/c/54/54" alt="Employee image")
                            .vacation__employee-name Aute Consequat
                        td 14/28
                        while i<12
                            td(=i++) 
                                .calendar__month
                                    .calendar__week
                                        .calendar__empty
                                        .calendar__empty
                                        .calendar__day
                                        .calendar__day.calendar__day--vacation
                                        .calendar__day.calendar__day--vacation
                                        .calendar__day.calendar__day--vacation
                                        .calendar__day.calendar__day--vacation
                                    .calendar__week
                                        .calendar__day.calendar__day--vacation
                                        .calendar__day.calendar__day--vacation
                                        .calendar__day
                                        .calendar__day
                                        .calendar__day
                                        .calendar__day
                                        .calendar__day
                                    .calendar__week
                                        .calendar__day.calendar__day--yellow
                                        .calendar__day.calendar__day--yellow
                                        .calendar__day.calendar__day--yellow
                                        .calendar__day.calendar__day--yellow
                                        .calendar__day
                                        .calendar__day
                                        .calendar__day
                                    .calendar__week
                                        .calendar__day
                                        .calendar__day.calendar__day--red
                                        .calendar__day.calendar__day--red
                                        .calendar__day
                                        .calendar__day
                                        .calendar__day
                                        .calendar__empty


            table.vacation__table
                thead.vacation__table-header
                    tr
                        each el in month
                            td= el
                tbody.vacation__table-body.js-vacation-table

        script(type='text/javascript' src="js/script.min.js")